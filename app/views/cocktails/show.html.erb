<h1>Cocktail Preparation</h1>
<%  %>

<%= @cocktail.name %> <br><br>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<h3>Ingredients</h3>
<% @ing = Dose.where(cocktail_id: @cocktail.id)%>
<% @ing.each do |dose| %>
<%= Ingredient.find(dose.ingredient_id).name %>
<% @dose = dose %>
<%= link_to 'Delete this dose', dose_path(@dose), method: :delete %> <br>
<% end %>

<%= link_to 'Go back to cocktails', cocktails_path %> <br><br>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>


